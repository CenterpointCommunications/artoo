.article
  = partial "/blog/header", {locals: { article: article }}
  = article.body
  .comments
    .img
      = image_tag "conversation.png"
    = link_to "9 comments", "#"
  .tags
    .img
      = image_tag "tag.png"
    - article.tags.each do |tag_name|
      = link_to tag_name, tag_path(tag_name)
